{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/swagger.json",
      "dest": "/index.js"
    },
    {
      "src": "/api-docs/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/books(.*)",
      "dest": "/api/books$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 